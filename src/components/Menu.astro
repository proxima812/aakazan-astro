---
import { container } from "../layouts/Layout.astro";
import Link from "./Link.astro";

export const item_link =
 "mr-0 lg:mr-[10px] py-[5px] px-[15px] font-medium text-md text-[#313113] rounded-lg lg:rounded-full last:mr-0";
---

<div class="hidden lg:flex w-full mx-auto justify-center mt-[40px]">
 <div class="flex p-[10px] rounded-full bg-white">
  <Link href="/" class={item_link}>🏠 Главная</Link>
  <Link href="/about" class={item_link}>👉 О нас</Link>
  <Link href="/groups" class={item_link}>👥 Собрания</Link>
  <Link href="/foryou" class={item_link}>🤗 Новичку</Link>
  <Link href="/contacts" class={item_link}>👤 Контакты</Link>
  <Link href="/reviews" class={item_link}>📄 Рецензия</Link>
  <Link href="/books" class={item_link}>📚 Литература</Link>
  <Link href="/history" class={item_link}>🎙 Личные истории</Link>
 </div>
</div>
<!-- mobile menu -->
<div class={`${container}` + " flex items-start flex-col"}>
 <div
  class="lg:hidden flex items-center text-[#666] font-medium mt-[40px] bg-[#efefef] py-[5px] px-[10px] rounded-[10px]"
  id="open-menu"
 >
  <svg
   class="mr-[5px] fill-[#666]"
   width="20"
   height="20"
   viewBox="0 0 20 20"
   fill="none"
   xmlns="http://www.w3.org/2000/svg"
  >
   <path
    d="M3.33333 15H16.6667C17.125 15 17.5 14.625 17.5 14.1667C17.5 13.7083 17.125 13.3333 16.6667 13.3333H3.33333C2.875 13.3333 2.5 13.7083 2.5 14.1667C2.5 14.625 2.875 15 3.33333 15ZM3.33333 10.8333H16.6667C17.125 10.8333 17.5 10.4583 17.5 10C17.5 9.54167 17.125 9.16667 16.6667 9.16667H3.33333C2.875 9.16667 2.5 9.54167 2.5 10C2.5 10.4583 2.875 10.8333 3.33333 10.8333ZM2.5 5.83333C2.5 6.29167 2.875 6.66667 3.33333 6.66667H16.6667C17.125 6.66667 17.5 6.29167 17.5 5.83333C17.5 5.375 17.125 5 16.6667 5H3.33333C2.875 5 2.5 5.375 2.5 5.83333Z"
    fill="black"></path>
  </svg>
  Меню
 </div>
 <div id="menu" class="hidden flex w-full justify-start mt-[20px]">
  <div class="flex flex-col p-[10px] rounded-lg bg-white">
   <a class={`${item_link}`} href="/">🏠 Главная</a>
   <a class={`${item_link} + `} href="/about">👉 О нас</a>
   <a class={`${item_link} + `} href="/groups">👥 Собрания</a>
   <a class={`${item_link} + `} href="/foryou">🤗 Новичку</a>
   <a class={`${item_link} + `} href="/contacts">👤 Контакты</a>
   <a class={`${item_link} + `} href="/reviews">📄 Рецензия</a>
   <a class={`${item_link} + `} href="/books">📚 Литература</a>
   <a class={`${item_link} + `} href="/history">🎙 Личные истории</a>
  </div>
 </div>
</div>

<script>
 const menu = document.querySelector("#menu");
 const menu_open = document.querySelector("#open-menu");
 const isHidden = false;

 if (!isHidden) {
  menu_open.addEventListener("click", () => {
   menu.classList.toggle("hidden");
  });
 }
</script>
