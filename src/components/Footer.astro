<style>
 footer {
  border-top-left-radius: 30px;
  border-top-right-radius: 30px;
  margin-top: auto;
  background-color: #fff;
 }
 .grid-footer {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 60px;
 }
 .col-footer {
  display: flex;
  flex-direction: column;
  gap: 20px;
 }
 .col-footer span {
  color: #111;
  font-size: 16px;
  font-weight: 700;
 }
 .col-footer a {
  color: #111;
  font-size: 15px;
  font-weight: 400;
  transition: color 0.2s linear, transform 0.2s linear;
 }
 .col-footer a:hover {
  transition: color 0.2s linear, transform 0.2s linear;
  transform: translateY(-2px);
  color: grey;
 }
 .bottom-footer {
  margin-top: 40px;
  border-top: 1px solid #eee;
 }
 .bottom-flex {
  margin-top: 40px;
  display: flex;
  justify-content: space-between;
 }
 .bottom-flex span {
  font-size: 16px;
  display: inline-block;
 }
 .socials {
  display: flex;
  gap: 20px;
 }
 .socials a {
  font-size: 16px;
  font-weight: 500;
  color: blue;
 }

 @media (max-width: 1024px) {
  .grid-footer {
   grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
   gap: 30px;
  }
  .bottom-flex {
   flex-direction: column;
   gap: 20px;
  }
 }
</style>

<script lang="js">
 document.getElementById("year").innerHTML = new Date().getFullYear();
</script>
