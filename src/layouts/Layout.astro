---
import Footer from "../components/Footer.astro";
import Menu from "../components/Menu.astro";
import Nav from "../components/Nav.astro";

export interface Props {
 title?: string | undefined;
 desc?: string | undefined;
 image_banner?: string;
}

// const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, desc, image_banner } = Astro.props;
const verification = "1146a121dce5d73e";

export const text_h1 = "text-blue-500 antialiased font-bold text-4xl";
export const text_h2 = "text-[#211D3C] antialiased font-bold text-3xl";
export const text_h3 = "text-[#211D3C] antialiased font-bold text-2xl";
export const text_p = "text-blue-300 antialiased font-regular text-base";

// Сетки
export const grid_cols_2 = "grid gap-4 items-start grid-cols-1 sm:grid-cols-2";
export const grid_cols_4 =
 "grid gap-4 items-start grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4";

// Контейнер
export const container = "container mx-auto px-[20px]";
---

<!DOCTYPE html>
<html lang="ru">
 <head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="theme-color" content="#EAEEFA" />
  <meta name="apple-mobile-web-app-capable" content="yes" />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

  <!-- Удалить! -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  <link rel="icon" type="image/svg+xml" href="assets/favicon/icon.svg" />
  <link rel="icon" type="image/png" sizes="32x32" href="assets/favicon/icon-32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="assets/favicon/icon-16.png" />
  <link rel="icon" type="image/png" sizes="48x48" href="assets/favicon/icon-48.png" />
  <link rel="icon" type="image/png" sizes="192x192" href="assets/favicon/icon-192.png" />
  <link
   rel="apple-touch-icon"
   type="image/png"
   sizes="167x167"
   href="assets/favicon/icon-167.png"
  />
  <link
   rel="apple-touch-icon"
   type="image/png"
   sizes="180x180"
   href="assets/favicon/icon-180.png"
  />

  <meta name="yandex-verification" content={verification} />

  <meta name="robots" content="noindex, nofollow" />

  <!-- <meta name="robots" content="index, follow" /> -->
  <link rel="canonical" href={Astro.url.pathname} />

  <meta property="og:type" content="website" />
  <meta property="og:url" content={Astro.url.pathname} />
  <meta property="og:site_name" content={title} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={desc} />
  <meta property="og:image" content={image_banner} />
  <meta property="og:image:type" content="image/png" />
  <meta property="og:image:width" content="968" />
  <meta property="og:image:height" content="504" />

  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
 </head>
 <body>
  <main class="main-layout">
   <Nav />
   <Menu />
   <slot />
   <Footer />
  </main>
 </body>
</html>
<style is:global>
 @import url("https://fonts.googleapis.com/css2?family=Inter:wght@900&family=Raleway:wght@400;500;700&display=swap");
 html,
 body {
  min-width: 320px;
  font-family: "Roboto", sans-serif;
  background-color: #f7f7f7;
  scroll-behavior: smooth;
 }
 .main-layout {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
 }
 p {
  hyphens: auto;
 }
 u {
  text-decoration-skip: ink;
 }
</style>
